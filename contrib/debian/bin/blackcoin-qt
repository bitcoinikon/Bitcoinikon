#!/bin/sh

set -e

umask 077

basedir=~/.bitcoinikon
dbfile="$basedir/DB_CONFIG"
cfgfile="$basedir/bitcoinikon.conf"

[ -e "$basedir" ] || mkdir "$basedir"

# Bitcoinikon does not clean up DB log files by default
[ -e "$dbfile" ] || echo 'set_flags DB_LOG_AUTOREMOVE' > "$dbfile"

exec /usr/lib/bitcoinikon/bitcoinikon-qt "$@"
